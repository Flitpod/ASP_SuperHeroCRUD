@using M3_SuperHeroCRUD.Models
@model IEnumerable<SuperHero>

@section head{
    <title>List your Heroes!</title>
    <meta name="keywords" content="list, heroes, herocollection" />
}

<h1>Superheros</h1>

<table>
    <tr>
        <th>Picture</th>
        <th>Name</th>
        <th>Power</th>
        <th>IsAlien</th>
        <th>Side</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        @: <tr>
            @:<td><img height="50" src="@Url.Action("GetImage","Hero", new { id = item.Id} )"/></td>
            @:<td>@item.Name</td>
            @:<td>@item.Power</td>
            @:<td>@item.IsAlien</td>
            @:<td>@item.HeroSide</td>
            @:<td>
                @:<a href="/hero/delete?name=@item.Name">Delete</a>
                @:<a href="/hero/update?name=@item.Name">Update</a>
            @:</td>
        @:</tr>
    }
</table>