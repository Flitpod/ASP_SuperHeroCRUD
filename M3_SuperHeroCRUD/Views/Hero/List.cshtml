@using M3_SuperHeroCRUD.Models
@model IEnumerable<SuperHero>

@section head {
    <title>List your Heroes!</title>
    <meta name="keywords" content="list, heroes, herocollection" />
}

<h1>Superheroes</h1>

@* <div class="row row-cols-1 row-cols-md-3 g-4"> *@
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card">
                <img src="@Url.Action("GetImage", "Hero", new {id = item.Id})" class="card-img-top" alt="@item.Name card">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <div class="progress" role="progressbar" aria-label="Basic example" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar" style="width: @(item.Power*10)%">@item.Power</div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

